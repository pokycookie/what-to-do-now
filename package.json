{
  "name": "what-to-do-now",
  "version": "0.1.0",
  "private": false,
  "build": {
    "productName": "What to do now",
    "appId": "com.wtdn",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true,
      "language": 1042,
      "shortcutName": "WTDN",
      "artifactName": "WTDN-${version}.${ext}",
      "uninstallDisplayName": "What to do now"
    },
    "directories": {
      "buildResources": "./build/",
      "output": "./dist/"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.49",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^9.0.1",
    "dayjs": "^1.11.7",
    "dexie": "^3.2.3",
    "dexie-react-hooks": "^1.1.3",
    "framer-motion": "^10.9.1",
    "node-sass": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.7.4",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4",
    "zustand": "^4.3.7"
  },
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "craco start",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "craco build",
    "build:electron": "tsc ./public/electron.ts",
    "deploy:xos": "electron-builder --mac",
    "deploy:win32": "electron-builder --win --ia32",
    "deploy:win64": "electron-builder --win --x64",
    "deploy:win": "npm run deploy:win32 && npm run deploy:win64",
    "test": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@emotion/babel-preset-css-prop": "^11.11.0",
    "concurrently": "^7.3.0",
    "electron": "^20.0.3",
    "electron-builder": "^23.6.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "wait-on": "^6.0.1"
  },
  "main": "public/electron.js",
  "homepage": "./"
}
